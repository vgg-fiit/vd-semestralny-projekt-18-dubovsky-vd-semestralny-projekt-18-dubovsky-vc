{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
        "outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"esnext",
			"dom"
		]
	}
}
